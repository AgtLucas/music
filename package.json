{
  "name": "music",
  "version": "0.0.1",
  "dependencies": {
    "compression": "^1.0.2",
    "express": "^4.2.0",
    "jade": "^1.3.1"
  },
  "devDependencies": {
    "browserify": "^4.1.3",
    "nib": "^1.0.2",
    "nodemon": "^1.0.19",
    "stylus": "^0.45.0",
    "watchify": "^0.10.0"
  },
  "private": true,
  "scripts": {
    "start": "node index.js",
    "build": "npm run build-css && npm run build-js",
    "build-css": "stylus -u nib css/main.styl -o static/ -c",
    "build-js": "browserify --debug js/main.js > static/bundle.js",
    "watch": "npm run watch-css & npm run watch-js & nodemon app.js -e js,jade -i node_modules/",
    "watch-css": "stylus -u nib css/main.styl -o static/ -w",
    "watch-js": "watchify js/main.js -o static/bundle.js -dv"
  }
}
