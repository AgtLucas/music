@import 'nib'
global-reset()

ellipsis()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

.clearfix:before, .clearfix:after
  content: ""
  display: table

.clearfix:after
  clear: both

*
  box-sizing: border-box

html, body
  background: black
  color: white
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  height: 100%
  overflow: hidden
  width: 100%
a
  color: #00B7FF

#player
  position: fixed
  margin-top: -5%
  height: 120%
  width: 100%

#view
  position: fixed
  height: 100%
  width: 100%
  padding-top: 100px
  text-shadow: 0 0 1px rgba(0, 0, 0, 0.5)
  z-index: 20
  background: linear-gradient(top, rgba(0,0,0,0.8) 0px, rgba(0,0,0,0) 100px)

#blur
  position: fixed
  height: 100%
  width: 100%
  -webkit-filter: blur(3px)
  -moz-filter: blur(3px)
  -o-filter: blur(3px)
  -ms-filter: blur(3px)
  filter: blur(3px)
  z-index: 0

#background
  position: fixed
  background-position: top left
  background-size: cover
  background-repeat: no-repeat
  height: 100%
  width: 100%

#header
  position: fixed
  height: 100px
  width: 100%
  margin-top: 15px
  z-index: 30

#search
  display: block
  height: 50px
  width: 400px
  background: linear-gradient(top, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.2))
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.3)
  border: 2px solid #FFF
  border-radius: 25px
  color: #FFF
  font-size: 20px
  outline: 0
  margin: 0 auto
  padding-left: 20px
  padding-right: 20px
  text-shadow: 0 0 rgba(0, 0, 0, 0.7)

::-webkit-input-placeholder
  color: #DDD
::-moz-placeholder
  color: #DDD
:-ms-input-placeholder
  color: #DDD

h1
  font-family: 'Rock Salt', cursive
  font-size: 80px
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.7)

.albums
  width: 400px
  float: right
  .album
    height: 150px
    width: 150px

    img
      width: 150px
      height: 150px

    .name
      color: #FFF
