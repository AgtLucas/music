@import 'nib'
global-reset()

ellipsis()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

.clearfix:before, .clearfix:after
  content: ""
  display: table

.clearfix:after
  clear: both

user-select()
  -webkit-touch-callout: arguments;
  -webkit-user-select: arguments;
  -khtml-user-select: arguments;
  -moz-user-select: arguments;
  -ms-user-select: arguments;
  user-select: arguments;

*
  box-sizing: border-box

html, body
  background: black
  color: white
  font-family: 'Oswald', sans-serif
  height: 100%
  overflow: hidden
  width: 100%

input
  font-family: 'Oswald', sans-serif

body.inactive
  cursor: none

a
  display: block
  color: #FFF
  text-decoration: none

#logo
  position: fixed
  bottom: 50px
  right: 15px
  width: 100px
  height: 34px
  background-image: url('/img/logo.png')
  z-index: 100
  background-size: 100px 34px
  transition: bottom 0.15s linear

  .inactive &
    bottom: 25px


#player
  position: fixed
  height: 100%
  width: 116%
  margin-left: -8%
  z-index: 10

#view
  position: fixed
  height: 100%
  width: 100%
  padding: 100px 30px 15px 30px
  text-shadow: 0 0 1px rgba(0, 0, 0, 0.5)
  z-index: 20
  background: linear-gradient(top, rgba(0,0,0,0.7) 0px, rgba(0,0,0,0) 100px)

#blur
  position: fixed
  height: 100%
  width: 100%
  -webkit-filter: blur(3px)
  -moz-filter: blur(3px)
  -o-filter: blur(3px)
  -ms-filter: blur(3px)
  filter: blur(3px)
  z-index: 0

#background
  position: fixed
  background-position: top left
  background-size: cover
  background-repeat: no-repeat
  height: 100%
  width: 100%

#header
  position: fixed
  height: 100px
  width: 100%
  margin-top: 15px
  z-index: 100

#search
  position: relative
  height: 50px
  width: 400px
  margin: 0 auto

  &.hasText .exitBtn
    display: block

  .exitBtn
    display: none
    border-top-right-radius: 25px
    border-bottom-right-radius: 25px
    position: absolute
    cursor: pointer
    top: 0
    right: 0
    text-shadow: #000 0 1px 3px
    color: #fff
    font-size: 26px
    padding: 11px 15px 12px 5px
    opacity: 0.7

    &:hover
      opacity: 1

  input
    display: block
    height: 50px
    width: 400px
    background: linear-gradient(top, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.2))
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.3)
    border: 2px solid #FFF
    border-radius: 25px
    color: #FFF
    font-size: 20px
    outline: 0
    padding-left: 20px
    padding-right: 20px
    text-shadow: 0 0 rgba(0, 0, 0, 0.7)

::-webkit-input-placeholder
  color: #DDD
::-moz-placeholder
  color: #DDD
:-ms-input-placeholder
  color: #DDD

h1, h2, h3, h4
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.7)
  line-height: 1.5em
h1
  font-family: 'Rock Salt', cursive
  font-size: 60px
h2
  font-family: 'Oswald', sans-serif
  font-size: 30px
  text-decoration: underline
  margin-bottom: 10px

#controls
  position: fixed
  width: 100%
  bottom: 0
  z-index: 100

  cursor: pointer
  user-select(none)

  .timeline, .progress
    float: left
    height: 35px
    transition: height 0.15s linear

    .inactive &
      height: 10px

  .time
    left: 0
    opacity: 1
    font-size: 18px
    margin: 9px 15px
    transition: opacity 0.15s linear
    .inactive &
      opacity: 0
  .timeline
    width: 100%
    background-color: rgba(123, 0, 153, 0.4)
  .progress
    width: 0%
    background-color: rgb(123, 0, 153)

#results
  max-width: 1440px

  .searching &
    opacity: 0.4

.result
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.7)

.tracks, .artists, .albums
  float: left
  padding: 0 20px
  width: 33%
  .result
    margin-bottom: 15px

.tracks .result
  background-color: rgba(0, 0, 0, 0.7)
  border-radius: 5px
  height: 70px
  &:hover
    background-color: rgba(44, 94, 177, 0.7)
    .playBtn
      background-color: rgb(55, 117, 221)

  .playBtn
    float: left
    background-color: rgba(123, 0, 153, 0.7)
    height: 52px
    width: 52px
    border-radius: 26px
    border: 2px solid rgba(255, 255, 255, 1)
    margin: 9px 12px
    .arrow
      width: 0
      height: 0
      border-top: 14px solid transparent
      border-bottom: 14px solid transparent
      border-left: 22px solid #FFF
      margin: 10px 0 0 17px
  .right
    float: left
    padding: 10px 0
    overflow: hidden
  .name, .artist
    line-height: 1.5em
  .name
    ellipsis()
    width: 100%
    font-size: 21px
  .artist
    color: #AAA
    font-size: 13px

.artists .result
  height: 580px
  text-align: center
  border-radius: 10px
  background-size: cover
  background-position: 50% 50%

  .gradient
    background-image: linear-gradient(top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0) 30%)
    border-radius: 10px
    height: 100%
    width: 100%
    padding: 10px 15px
    background-size: cover

  .name
    font-size: 21px
    line-height: 1.5em


.albums .result
  position: relative
  width: 180px
  height: 180px
  border-radius: 5px
  float: left
  text-align: center
  margin-right: 15px

  .gradient
    background-image: linear-gradient(top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0) 30%)
    border-radius: 5px
    height: 100%
    width: 100%
    padding: 10px 15px
    background-size: cover

  .name
    font-size: 17px
    line-height: 1.5em

  .artist
    position: absolute
    bottom: 10px
    left: 0
    // text-align: center
    width: 180px
    font-size: 14px

.artists, .albums
  .result:hover
    .gradient
      background-image: linear-gradient(top, rgba(44, 94, 177, 0.7) 0%, rgba(44, 94, 177, 0.5) 100%)
